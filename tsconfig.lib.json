{
    "extends": "./tsconfig.app.json",
    "include": ["lib", "vite-env.d.ts"],
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist/types",
        "composite": true,
        "rootDir": "lib",
        "module": "ESNext",
        "target": "ES2020",
        "jsx": "react-jsx",
        "strict": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
    }
}